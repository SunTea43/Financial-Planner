<% bs = balance_sheet %>
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Balance General - <%= bs.recorded_at.strftime("%d/%m/%Y %H:%M") %></h5>
  </div>
  <div class="card-body">
    <div class="row mb-4">
      <div class="col-md-4">
        <h6>Total Activos</h6>
        <h4 class="text-success"><%= number_to_currency(bs.total_assets) %></h4>
      </div>
      <div class="col-md-4">
        <h6>Total Pasivos</h6>
        <h4 class="text-danger"><%= number_to_currency(bs.total_liabilities) %></h4>
      </div>
      <div class="col-md-4">
        <h6>Patrimonio Neto</h6>
        <h4 class="<%= bs.net_worth >= 0 ? 'text-success' : 'text-danger' %>">
          <%= number_to_currency(bs.net_worth) %>
        </h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <h6>Activos LÃ­quidos</h6>
        <ul class="list-group mb-3">
          <% liquid_assets.each do |asset| %>
            <li class="list-group-item d-flex justify-content-between">
              <%= link_to asset.name, financial_asset_path(asset), class: "text-decoration-none text-dark", title: "Ver historial" %>
              <strong><%= number_to_currency(asset.amount) %></strong>
            </li>
          <% end %>
        </ul>

        <h6>Activos Fijos</h6>
        <ul class="list-group mb-3">
          <% fixed_assets.each do |asset| %>
            <li class="list-group-item d-flex justify-content-between">
              <%= link_to asset.name, financial_asset_path(asset), class: "text-decoration-none text-dark", title: "Ver historial" %>
              <strong><%= number_to_currency(asset.amount) %></strong>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="col-md-6">
        <h6>Pasivos Corto Plazo</h6>
        <ul class="list-group mb-3">
          <% short_term_liabilities.each do |liability| %>
            <li class="list-group-item d-flex justify-content-between">
              <%= link_to liability.name, financial_liability_path(liability), class: "text-decoration-none text-dark", title: "Ver historial" %>
              <strong><%= number_to_currency(liability.amount) %></strong>
            </li>
          <% end %>
        </ul>

        <h6>Pasivos Largo Plazo</h6>
        <ul class="list-group mb-3">
          <% long_term_liabilities.each do |liability| %>
            <li class="list-group-item d-flex justify-content-between">
              <%= link_to liability.name, financial_liability_path(liability), class: "text-decoration-none text-dark", title: "Ver historial" %>
              <strong><%= number_to_currency(liability.amount) %></strong>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <% if bs.notes.present? %>
      <div class="mt-3">
        <h6>Notas</h6>
        <p class="text-muted"><%= bs.notes %></p>
      </div>
    <% end %>
  </div>
</div>

